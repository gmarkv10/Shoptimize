<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs320.shoptimize.shoptimizeapp" >

    <application
        android:targetSdkVersion="17"
        android:allowBackup="true"
        android:icon="@drawable/shoptimizeicon48"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name=".StoreListActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name=".FloorplanActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name=".CouponGalleryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.cs320.shoptimize.shoptimizeapp" />
</manifest>
