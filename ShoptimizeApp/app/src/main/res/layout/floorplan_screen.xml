<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.cs320.shoptimize.shoptimizeapp.FPView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/btn_prev"
        android:id="@+id/floorplan_view"></com.cs320.shoptimize.shoptimizeapp.FPView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/btn_prev"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_show"
        android:layout_alignTop="@+id/btn_prev"
        android:text="Show coupons"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btn_next"
        android:focusableInTouchMode="true"
        android:layout_alignTop="@+id/btn_show"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>