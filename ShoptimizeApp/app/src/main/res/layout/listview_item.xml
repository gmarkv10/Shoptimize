<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item "
        android:focusable="false"
        android:id="@+id/list_item"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Coupon "
        android:id="@+id/coupon"
        android:layout_alignBottom="@+id/couponCheck"
        android:layout_toRightOf="@+id/couponCheck"
        android:layout_toEndOf="@+id/couponCheck"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="7dp" />

    <!--TextView  UNCOMMENT IF YOU REALLY WANT TO SEE THE LOCATION YOU BITCH
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/location"
        android:layout_below="@+id/list_item"
        android:layout_toRightOf="@+id/couponCheck"
        android:layout_toEndOf="@+id/couponCheck" /-->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera_icon"
        android:id="@+id/add_coupon_button"
        android:layout_below="@+id/list_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coupon"
        android:id="@+id/couponCheck"
        android:layout_gravity="right"
        android:singleLine="false"
        android:checked="false"
        android:focusable="false"
        android:clickable="false"
        android:editable="false"
        android:layout_alignBottom="@+id/add_coupon_button"
        android:layout_toRightOf="@+id/add_coupon_button"
        android:visibility="invisible"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete"
        android:src="@drawable/delete_item"
        android:layout_alignBottom="@+id/add_coupon_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>